{
  "name": "unisonht",
  "version": "1.0.0",
  "description": "UnisonHT home theatre control",
  "main": "index.js",
  "scripts": {
    "start": "export DEBUG=unisonht:*; nodemon --watch 'src/**' --ext 'ts,tsx,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/index.ts'",
    "build": "tsc",
    "serve": "node dist/index.js",
    "format": "eslint . && prettier . --write",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bootstrap": "^5.3.1",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "ioctl": "^2.0.2",
    "openapi-types": "^12.1.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
