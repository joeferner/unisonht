{
  "name": "@unisonht/unisonht",
  "version": "1.0.0",
  "description": "UnisonHT server",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "bin": {
    "unisonht-server": "dist/bin/server.js"
  },
  "scripts": {
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "build:watch": "tsc --watch | awk '{gsub(/\\033c/,\"\") system(\"\")}1'",
    "server:watch": "ts-node-dev --respawn --transpile-only --ignore-watch public/ src/bin/server.ts --config sample.config.json",
    "start:watch": "DEBUG=unisonht:* concurrently \"npm run build:watch\" \"npm run server:watch\" \"npm run swagger:watch\" \"npm run type-check:watch\"",
    "swagger": "tsoa spec",
    "swagger:watch": "nodemon --ext ts --ignore public/ --ignore dist/ -x npm run swagger",
    "type-check": "mkdir -p dist && ts-interface-builder --outDir dist/ src/types/Config.ts",
    "type-check:watch": "mkdir -p dist && nodemon --ext ts --ignore public/ --ignore dist/ -x npm run type-check",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix --ext .ts .",
    "lint-staged": "lint-staged",
    "pre-commit": "npm run format && npm run lint-staged && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/joeferner/unisonht.git"
  },
  "keywords": [
    "unisonht",
    "home",
    "remote",
    "control"
  ],
  "author": "Joe Ferner <joe@fernsroth.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joeferner/unisonht/issues"
  },
  "homepage": "https://github.com/joeferner/unisonht#readme",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/node": "^17.0.24",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-interface-builder": "^0.3.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-promise-router": "^4.1.1",
    "http-status-codes": "^2.2.0",
    "swagger-ui-express": "^4.3.0",
    "ts-interface-checker": "^1.0.2",
    "tsoa": "^3.14.1",
    "yargs": "^17.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
