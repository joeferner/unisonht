{
  "name": "@unisonht/unisonht",
  "version": "1.0.0",
  "description": "UnisonHT server",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "packageManager": "pnpm@7.0.0",
  "bin": {
    "unisonht-server": "dist/bin/server.js"
  },
  "scripts": {
    "build": "ttsc",
    "build:watch": "nodemon --watch src --ext ts --exec ttsc",
    "server:watch": "DEBUG=unisonht:* nodemon --watch src --ext ts -- ts-node-dev dist/bin/server.js --config sample.config.json",
    "start:watch": "concurrently \"npm run build:watch\" \"npm run server:watch\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --fix --ext .ts .",
    "lint-staged": "lint-staged",
    "pre-commit": "npm run format && npm run lint-staged && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/joeferner/unisonht.git"
  },
  "keywords": [
    "unisonht",
    "home",
    "remote",
    "control"
  ],
  "author": "Joe Ferner <joe@fernsroth.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joeferner/unisonht/issues"
  },
  "homepage": "https://github.com/joeferner/unisonht#readme",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/nested-error-stacks": "^2.1.0",
    "@types/node": "^17.0.24",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-node-dev": "^1.1.8",
    "tst-reflect-transformer": "^0.9.5",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "debug": "^4.3.4",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-promise-router": "^4.1.1",
    "http-status-codes": "^2.2.0",
    "nested-error-stacks": "^2.1.1",
    "swagger-ui-express": "^4.3.0",
    "ts-json-schema-generator": "^1.0.0",
    "tst-reflect": "^0.7.4",
    "yargs": "^17.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
