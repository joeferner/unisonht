      "deviceClass": "com.unisonht.plugin.imageViewer.ImageViewerDevicePlugin",
      "data": {
        "images": {
          "HELP": "/home/jferner/dev/unisonht/config/help-input.png"
        }
      }
    }
  },
  "defaultMode": "off",
  "modes": {
    "global": {
      "buttonMap": {
        "tivo:POWER": {
          "action": "switchMode",
          "mode": "off"
        },
        "tivo:INPUT": {
          "action": "switchMode",
          "mode": "help"
        },
        "VOLUMEUP": {
          "action": "deviceButtonPress",
          "device": "receiver",
          "button": "VOLUMEUP"
        },
        "VOLUMEDOWN": {
          "action": "deviceButtonPress",
          "device": "receiver",
          "button": "VOLUMEDOWN"
        },
        "MUTE": {
          "action": "deviceButtonPress",
          "device": "receiver",
          "button": "MUTE"
        }
      }
    },
    "off": {
      "onEnter": {
        "action": "simultaneous",
        "actions": [
          {
            "action": "ensureOff",
            "device": "receiver"
          },
          {
            "action": "ensureOff",
            "device": "projector"
          },
          {
            "action": "ensureOff",
            "device": "kodi"
          },
          {
            "action": "ensureOff",
            "device": "bluray"
          }
        ]
      },
      "buttonMap": {
        "NUM1": {
          "action": "switchMode",
          "mode": "tivo"
        },
        "NUM2": {
          "action": "switchMode",
          "mode": "bluray"
        },
        "NUM3": {
          "action": "switchMode",
          "mode": "kodi"
        },
        "NUM4": {
          "action": "switchMode",
          "mode": "xbox"
        },
        "NUM5": {
          "action": "switchMode",
          "mode": "wii"
        }
      }
    },
    "help": {
      "onEnter": {
        "action": "sequential",
        "actions": [
          {
            "action": "deviceButtonPress",
            "device": "imageViewer",
            "button": "HELP"
          },
          {
            "action": "runMacro",
            "name": "switchInputs",
            "args": {
              "input": "raspberrypi"
            }
          }
        ]
      },
      "onExit": {
        "action": "ensureOff",
        "device": "imageViewer"
      },
      "buttonMap": {
        "NUM1": {
          "action": "switchMode",
          "mode": "tivo"
        },
        "NUM2": {
          "action": "switchMode",
          "mode": "bluray"
        },
        "NUM3": {
          "action": "switchMode",
          "mode": "kodi"
        },
        "NUM4": {
          "action": "switchMode",
          "mode": "xbox"
        },
        "NUM5": {
          "action": "switchMode",
          "mode": "wii"
        }
      }
    },
    "tivo": {
      "onEnter": {
        "action": "runMacro",
        "name": "ensureOnAndSwitchInputs",
        "args": {
          "device": "tivo",
          "input": "tivo"
        }
      },
      "defaultDevice": "tivo",
      "buttonMap": {
      }
    },
    "bluray": {
      "onEnter": {
        "action": "runMacro",
        "name": "ensureOnAndSwitchInputs",
        "args": {
          "device": "bluray",
          "input": "bluray"
        }
      },
      "defaultDevice": "bluray",
      "buttonMap": {
      }
    },
    "kodi": {
      "onEnter": {
        "action": "runMacro",
        "name": "ensureOnAndSwitchInputs",
        "args": {
          "device": "kodi",
          "input": "kodi"
        }
      },
      "defaultDevice": "kodi",
      "buttonMap": {
      }
    },
    "xbox": {
      "onEnter": {
        "action": "runMacro",
        "name": "ensureOnAndSwitchInputs",
        "args": {
          "device": "xbox",
          "input": "xbox"
        }
      }
    },
    "wii": {
      "onEnter": {
        "action": "runMacro",
        "name": "ensureOnAndSwitchInputs",
        "args": {
          "device": "wii",
          "input": "wii"
        }
      }
    }
  },
  "macros": {
    "ensureOnAndSwitchInputs": {
      "action": "simultaneous",
      "actions": [
        {
          "action": "ensureOn",
          "device": "${device}"
        },
        {
          "action": "runMacro",
          "name": "switchInputs"
        }
      ]
    },
    "switchInputs": {
      "action": "simultaneous",
      "actions": [
        {
          "action": "sequential",
          "actions": [
            {
              "action": "ensureOn",
              "device": "projector"
            },
            {
              "action": "changeInput",
              "device": "projector",
              "input": "hdmi"
            }
          ]
        },
        {
          "action": "sequential",
          "actions": [
            {
              "action": "ensureOn",
              "device": "receiver"
            },
            {
              "action": "changeInput",
              "device": "receiver",
              "input": "${input}"
            }
          ]
        }
      ]
    }
  },
