<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>unisonht</artifactId>
        <groupId>com.unisonht</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>unisonht-dist</artifactId>
    <name>UnisonHT: Dist</name>

    <dependencies>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-client-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-command-line</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Plugins -->
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-epson-network-rs232-projector</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-image-viewer</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-kodi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-lirc</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-sony-bluray</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-tivo</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-web</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-xbox</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.unisonht</groupId>
            <artifactId>unisonht-plugin-yamaha-receiver</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>src/main/resources/assembly.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>